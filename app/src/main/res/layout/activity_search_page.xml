<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Search_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/Iback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_black"/>

        <EditText
            android:id="@+id/Esearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/frame2"
            android:hint="search food, shop name"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/Tsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:text="Search"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/underline2"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/list"
        android:dividerHeight="1dp"
        android:divider="@color/colorGery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/underline2"
        android:visibility="invisible"/>
</LinearLayout>