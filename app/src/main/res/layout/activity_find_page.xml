<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Find_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTheme"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Generate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ring"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dianzan"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended for You"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ring"/>
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:numColumns="2"
            android:columnWidth="20dp"></GridView>
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/l_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_home"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_find"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_find"/>

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Find"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_cart"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_cart"/>

            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_my"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_user"/>

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="My"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>