<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Milktea.Restaurant1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/fbg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/Iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/back"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/Isearch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/search"
                android:scaleType="centerInside"/>
            <ImageView
                android:id="@+id/Iuser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/username" />
        </LinearLayout>

        <ImageView
            android:id="@+id/Ilogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Tname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="#04924C"
            android:textSize="23dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/Istar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/fivestar"/>

            <TextView
                android:id="@+id/Tvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Ttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="left"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TVrecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Recommends"
            android:textColor="#04924C"
            android:textStyle="italic"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/TVmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorGolden"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <GridView
        android:id="@+id/GV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:numColumns="3">
    </GridView>

    <TextView
        android:id="@+id/TVpromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Promotion"
        android:textStyle="italic"
        android:textSize="18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/Icoupon1"
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ad"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/Icoupon2"
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ad"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/Icoupon3"
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ad"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/Icoupon4"
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ad"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>s

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/colorTheme">

        <ImageView
            android:id="@+id/Imarket"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/Titems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/T1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Items"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/Trm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="RM"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/TRM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/Bdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_margin="5dp"
            android:text="Details"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>