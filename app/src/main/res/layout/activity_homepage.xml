<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTheme"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@color/colorWhite"
            android:padding="3dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/Isearch"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/search"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <com.example.delicious.Adapters.MyPosterViewPager
        android:layout_width="match_parent"
        android:layout_height="190dp">
    </com.example.delicious.Adapters.MyPosterViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/underline3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorWhite"/>
    <GridView
        android:id="@+id/gar"
        android:background="@color/colorGery"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:numColumns="2">
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/l_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_home"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_find"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_find"/>

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Find"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_cart"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_cart"/>

            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_my"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_user"/>

            <TextView
                android:id="@+id/tv_my"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="My"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>