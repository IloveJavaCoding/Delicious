<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/i001"
    tools:context=".ui.common.sign_in.Forgetpage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:padding="10dp"
        android:text="Just to Register another one!!!"
        android:textColor="#EB0E0E"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:padding="10dp">

        <Button
            android:id="@+id/BTologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D5FF5722"
            android:text="Login"
            android:textColor="#ffffff" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1">
        </View>

        <Button
            android:id="@+id/Bregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2B76E7"
            android:text="Register"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>