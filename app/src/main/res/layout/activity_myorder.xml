<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Myorder">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorTheme"
        android:padding="5dp">

        <ImageView
            android:id="@+id/Iback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:text="MY ORDER"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/Lv1"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/underline2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/T1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Total Items: "
                        android:textColor="@color/colorText"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/Tnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="3"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/Trm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Total Price(RM): "
                        android:textColor="@color/colorText"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/Tprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="13.00"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/Torip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="right"
                    android:text="15.00"
                    android:background="@drawable/underline2"
                    android:textColor="#80EC6A6A"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/underline2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Order number: "
            android:textSize="22dp"
            android:textColor="@color/colorText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="ASD142857"
            android:textSize="23dp"
            android:textColor="@color/colorText"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/underline2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Please rate this restaurant:"
            android:textSize="20dp"
            android:textColor="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Taste:"
                android:textSize="20dp"
                android:textColor="@color/colorText" />
            <View
                android:id="@+id/vt1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vt2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vt3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vt4"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vt5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Service:"
                android:textSize="20dp"
                android:textColor="@color/colorText" />

            <View
                android:id="@+id/vs1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vs2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vs3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vs4"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
            <View
                android:id="@+id/vs5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/frame_star"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/underline2"/>
    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Thank you!"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/colorText"/>

    <Button
        android:id="@+id/Breceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="I Received"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorText"
        />

</LinearLayout>